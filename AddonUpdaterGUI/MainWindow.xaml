<Controls:MetroWindow x:Class="AddonUpdaterGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddonUpdaterGUI"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="AddonUpdater" Height="450" Width="800"
                      x:Name="main" WindowStartupLocation="CenterScreen">
    <Grid>
        <DataGrid x:Name="grid_addons" AutoGenerateColumns="False" Margin="0,40,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Addon" Binding="{Binding Name, Mode=OneWay}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Progress, Mode=OneWay}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button IsEnabled="{Binding ElementName=main, Path=btn_enabled}" Content="Update" HorizontalAlignment="Left" Width="75" Click="Button_Click" Height="25" VerticalAlignment="Top" Margin="10,10,0,0" />
    </Grid>
</Controls:MetroWindow>